<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/transparent_grey" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:bottom=".3dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/grey" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:right="0.9dp" android:left="0.9dp" android:bottom="1.5dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/card_bgColor"/>
            <corners android:radius="4dp"/>
            <padding android:left="@dimen/default_padding_large"
                android:right="@dimen/default_padding_large"
                android:top="@dimen/default_padding_medium"
                android:bottom="@dimen/default_padding_medium"/>
        </shape>
    </item>
</layer-list>