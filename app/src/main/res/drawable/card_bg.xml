<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_grey" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item
        android:bottom=".3dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item
        android:bottom="1.5dp"
        android:left="0.9dp"
        android:right="0.9dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_bgColor" />
            <corners android:radius="4dp" />
            <padding
                android:bottom="@dimen/default_padding_medium"
                android:left="@dimen/default_padding_large"
                android:right="@dimen/default_padding_large"
                android:top="@dimen/default_padding_medium" />
        </shape>
    </item>
</layer-list>