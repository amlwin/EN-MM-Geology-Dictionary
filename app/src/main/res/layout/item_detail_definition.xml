<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_padding_large"
    android:paddingLeft="@dimen/default_padding_large"
    android:paddingRight="@dimen/default_padding_large"
    android:paddingTop="@dimen/default_padding_large">
    <TextView
        style="@style/TV_DEFAULT_LARGE_BOLD"
        android:text="ဖွင့်ဆိုချက်"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:text="@string/place_holder" />
</LinearLayout>