<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="120dp"

    android:layout_marginBottom="@dimen/default_padding_medium"
    android:layout_marginRight="@dimen/default_padding_small"
    android:layout_marginTop="@dimen/default_padding_medium"
    android:background="@drawable/card_bg"
    android:orientation="vertical"
    android:padding="@dimen/default_padding_medium">

    <TextView
        android:id="@+id/tv_word"
        style="@style/TV_DEFAULT_BOLD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Awesome" />

    <TextView
        android:id="@+id/tv_word_type"
        style="@style/TV_DETAIL_HEADER_WORD_TYPE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_large"
        android:text="Adjective" />


</LinearLayout>